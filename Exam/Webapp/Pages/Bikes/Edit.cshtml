@page "{id}"
@using BLL.Enums
@model Webapp.Pages.Bikes.EditModel
@{
    ViewData["Title"] = "Edit Bike";
}

<h1>Edit Bike</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="Bike.Id" />
            
            <div class="form-group mb-3">
                <label asp-for="Bike.Type" class="form-label"></label>
                <select asp-for="Bike.Type" class="form-control" asp-items="Html.GetEnumSelectList<BikeType>()">
                    <option value="">Select bike type</option>
                </select>
                <span asp-validation-for="Bike.Type" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Bike.DailyRate" class="form-label"></label>
                <input asp-for="Bike.DailyRate" class="form-control" step="0.01" />
                <span asp-validation-for="Bike.DailyRate" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Bike.ServiceInterval" class="form-label"></label>
                <input asp-for="Bike.ServiceInterval" class="form-control" />
                <span asp-validation-for="Bike.ServiceInterval" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Bike.CurrentOdometer" class="form-label"></label>
                <input asp-for="Bike.CurrentOdometer" class="form-control" />
                <span asp-validation-for="Bike.CurrentOdometer" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Bike.Status" class="form-label"></label>
                <select asp-for="Bike.Status" class="form-control" asp-items="Html.GetEnumSelectList<BikeStatus>()">
                    <option value="">Select status</option>
                </select>
                <span asp-validation-for="Bike.Status" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
