@page
@model Webapp.Pages.Customers.IndexModel
@{
    ViewData["Title"] = "Customers";
}

<h1>Customers</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Customer</a>
</p>

<form method="get" class="mb-4">
    <div class="row g-3">
        <div class="col-md-8">
            <label class="form-label">Search</label>
            <input asp-for="SearchTerm" class="form-control"
                   placeholder="Search by name, email, or phone..." />
        </div>
        <div class="col-md-4 d-flex align-items-end">
            <button type="submit" class="btn btn-primary me-2">
                <i class="bi bi-search"></i> Search
            </button>
            <a asp-page="./Index" class="btn btn-secondary">Clear</a>
        </div>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Damage History</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <td>@customer.FirstName @customer.LastName</td>
                    <td>@customer.Email</td>
                    <td>@customer.PhoneNumber</td>
                    <td>
                        @Model.DamageCounts.TryGetValue(customer.Id, out var damageCount)
                        @damageCount damage incident(s)
                    </td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@customer.Id" class="btn btn-sm btn-secondary">Edit</a>
                        <a asp-page="Delete" asp-route-id="@customer.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
