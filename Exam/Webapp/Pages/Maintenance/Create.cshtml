@page
@using BLL.Enums
@model Webapp.Pages.Maintenance.CreateModel
@{
    ViewData["Title"] = "Record Maintenance";
}

<h1>Record Maintenance</h1>

@if (Model.SelectedBike != null)
{
    <div class="alert alert-info mb-3">
        <strong>Selected Bike:</strong> @Model.SelectedBike.BikeNumber (@Model.SelectedBike.Type)
        <br/>
        <small>Current Odometer: @Model.SelectedBike.CurrentOdometer km | Last Service: @Model.SelectedBike.LastServiceOdometer km</small>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="MaintenanceRecord.BikeId" class="form-label">Bike</label>
                <select asp-for="MaintenanceRecord.BikeId" class="form-select" asp-items="Model.BikeSelectList">
                    <option value="">Select a bike</option>
                </select>
                <span asp-validation-for="MaintenanceRecord.BikeId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MaintenanceRecord.ServiceType" class="form-label">Service Type</label>
                <select asp-for="MaintenanceRecord.ServiceType" class="form-select" asp-items="Html.GetEnumSelectList<ServiceType>()">
                </select>
                <span asp-validation-for="MaintenanceRecord.ServiceType" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MaintenanceRecord.ScheduledDate" class="form-label">Service Date</label>
                <input asp-for="MaintenanceRecord.ScheduledDate" class="form-control" type="date" />
                <span asp-validation-for="MaintenanceRecord.ScheduledDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MaintenanceRecord.OdometerAtService" class="form-label">Odometer at Service (km)</label>
                <input asp-for="MaintenanceRecord.OdometerAtService" class="form-control" type="number" />
                <span asp-validation-for="MaintenanceRecord.OdometerAtService" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MaintenanceRecord.Cost" class="form-label">Cost (EUR)</label>
                <input asp-for="MaintenanceRecord.Cost" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="MaintenanceRecord.Cost" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MaintenanceRecord.Description" class="form-label">Description</label>
                <textarea asp-for="MaintenanceRecord.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="MaintenanceRecord.Description" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="MarkAsCompleted" class="form-check-input" type="checkbox" checked />
                <label asp-for="MarkAsCompleted" class="form-check-label">Mark as Completed</label>
                <small class="form-text text-muted d-block">If checked, the bike will be marked as Available after service.</small>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Record Maintenance</button>
                <a asp-page="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
