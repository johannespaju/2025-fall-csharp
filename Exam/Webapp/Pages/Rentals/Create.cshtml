@page
@model Webapp.Pages.Rentals.CreateModel
@{
    ViewData["Title"] = "Create Rental";
}

<h1>Create Rental</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Rental.BikeId" class="form-label">Bike</label>
                <select asp-for="Rental.BikeId" class="form-control" asp-items="Model.BikeOptions">
                    <option value="">Select a bike</option>
                </select>
                <span asp-validation-for="Rental.BikeId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Rental.CustomerId" class="form-label">Customer</label>
                <select asp-for="Rental.CustomerId" class="form-control" asp-items="Model.CustomerOptions">
                    <option value="">Select a customer</option>
                </select>
                <span asp-validation-for="Rental.CustomerId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Rental.StartTime" class="form-label"></label>
                <input asp-for="Rental.StartTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="Rental.StartTime" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Rental.EndTime" class="form-label"></label>
                <input asp-for="Rental.EndTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="Rental.EndTime" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label>Calculated Price</label>
                <input type="text" class="form-control" value="@Model.CalculatedPrice.ToString("C")" readonly />
            </div>
            
            <div class="form-group mb-3">
                <label>Required Deposit</label>
                <input type="text" class="form-control" value="@Model.CalculatedDeposit.ToString("C")" readonly />
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Recalculate price and deposit when inputs change
            $('select, input[type="datetime-local"]').change(function() {
                $.ajax({
                    url: '@Url.Page("Create", "Calculate")',
                    type: 'GET',
                    data: {
                        bikeId: $('#Rental_BikeId').val(),
                        customerId: $('#Rental_CustomerId').val(),
                        startTime: $('#Rental_StartTime').val(),
                        endTime: $('#Rental_EndTime').val()
                    },
                    success: function(data) {
                        $('#calculatedPrice').text(data.price);
                        $('#calculatedDeposit').text(data.deposit);
                    }
                });
            });
        });
    </script>
}
