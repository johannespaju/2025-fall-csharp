@page
@model Webapp.Pages.Rentals.CreateModel
@using BLL.Enums
@{
    ViewData["Title"] = "Create Rental";
}

<h1>Create Rental</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Rental.BikeId" class="form-label">Bike</label>
                <select asp-for="Rental.BikeId" class="form-control" asp-items="Model.BikeOptions">
                    <option value="">Select a bike</option>
                </select>
                <span asp-validation-for="Rental.BikeId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Rental.CustomerId" class="form-label">Customer</label>
                <select asp-for="Rental.CustomerId" class="form-control" asp-items="Model.CustomerOptions">
                    <option value="">Select a customer</option>
                </select>
                <span asp-validation-for="Rental.CustomerId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Rental.StartDate" class="form-label"></label>
                <input asp-for="Rental.StartDate" type="date" class="form-control" />
                <span asp-validation-for="Rental.StartDate" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Rental.StartTime" class="form-label"></label>
                <input asp-for="Rental.StartTime" type="time" class="form-control" />
                <span asp-validation-for="Rental.StartTime" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Rental.EndDate" class="form-label"></label>
                <input asp-for="Rental.EndDate" type="date" class="form-control" />
                <span asp-validation-for="Rental.EndDate" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Rental.EndTime" class="form-label"></label>
                <input asp-for="Rental.EndTime" type="time" class="form-control" />
                <span asp-validation-for="Rental.EndTime" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Rental.RentalType" class="form-label">Rental Type</label>
                <select asp-for="Rental.RentalType" class="form-control" asp-items="Html.GetEnumSelectList<RentalType>()">
                    <option value="">Select rental type</option>
                </select>
                <span asp-validation-for="Rental.RentalType" class="text-danger"></span>
                <small class="form-text text-muted">FourHour: 4-hour block rental | FullDay: 12-hour rental</small>
            </div>
            
            <div class="form-group mb-3">
                <label>Calculated Price</label>
                <input type="text" class="form-control" value="@Model.CalculatedPrice.ToString("C")" readonly />
            </div>
            
            <div class="form-group mb-3">
                <label>Required Deposit</label>
                <input type="text" class="form-control" value="@Model.CalculatedDeposit.ToString("C")" readonly />
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
