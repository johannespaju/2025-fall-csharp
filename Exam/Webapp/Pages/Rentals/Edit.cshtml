@page "{id}"
@model Webapp.Pages.Rentals.EditModel
@{
    ViewData["Title"] = "Edit Rental";
}

<h1>Edit Rental</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="Rental.Id" />
            
            <div class="form-group mb-3">
                <label asp-for="Rental.BikeId" class="form-label">Bike</label>
                <select asp-for="Rental.BikeId" class="form-control" asp-items="Model.BikeOptions">
                    <option value="">Select a bike</option>
                </select>
                <span asp-validation-for="Rental.BikeId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Rental.CustomerId" class="form-label">Customer</label>
                <select asp-for="Rental.CustomerId" class="form-control" asp-items="Model.CustomerOptions">
                    <option value="">Select a customer</option>
                </select>
                <span asp-validation-for="Rental.CustomerId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Rental.StartTime" class="form-label"></label>
                <input asp-for="Rental.StartTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="Rental.StartTime" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Rental.EndTime" class="form-label"></label>
                <input asp-for="Rental.EndTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="Rental.EndTime" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Rental.TotalPrice" class="form-label">Total Price</label>
                <input asp-for="Rental.TotalPrice" class="form-control" step="0.01" />
                <span asp-validation-for="Rental.TotalPrice" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Rental.Deposit" class="form-label">Deposit</label>
                <input asp-for="Rental.Deposit" class="form-control" step="0.01" />
                <span asp-validation-for="Rental.Deposit" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Rental.IsActive" class="form-label"></label>
                <input asp-for="Rental.IsActive" type="checkbox" class="form-check-input" />
                <span asp-validation-for="Rental.IsActive" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
