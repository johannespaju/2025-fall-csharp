@page
@using BLL.Enums
@model Webapp.Pages.Rentals.IndexModel
@{
    ViewData["Title"] = "Rentals";
}

<h1>Rentals</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Rental</a>
</p>

<form method="get" class="mb-4">
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Filter by Status</label>
            <select asp-for="FilterStatus" class="form-select">
                <option value="">All Statuses</option>
                <option value="@RentalStatus.Reserved">Reserved</option>
                <option value="@RentalStatus.Active">Active</option>
                <option value="@RentalStatus.Completed">Completed</option>
                <option value="@RentalStatus.Cancelled">Cancelled</option>
                <option value="@RentalStatus.Extended">Extended</option>
            </select>
        </div>
        <div class="col-md-6 d-flex align-items-end">
            <button type="submit" class="btn btn-primary me-2">
                <i class="bi bi-filter"></i> Filter
            </button>
            <a asp-page="./Index" class="btn btn-secondary">Clear</a>
        </div>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Bike</th>
                <th>Customer</th>
                <th>Start</th>
                <th>End</th>
                <th>Total Price</th>
                <th>Deposit</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rental in Model.Rentals)
            {
                <tr>
                    <td>@rental.Bike?.BikeNumber (@rental.Bike?.Type)</td>
                    <td>@rental.Customer?.FirstName @rental.Customer?.LastName</td>
                    <td>@rental.StartDate.ToString("yyyy-MM-dd") @rental.StartTime.ToString("HH:mm")</td>
                    <td>@rental.EndDate.ToString("yyyy-MM-dd") @rental.EndTime.ToString("HH:mm")</td>
                    <td>@rental.TotalCost.ToString("C")</td>
                    <td>@rental.DepositAmount.ToString("C")</td>
                    <td>
                        <span class="badge @(rental.Status == RentalStatus.Active ? "bg-success" : rental.Status == RentalStatus.Reserved ? "bg-info" : rental.Status == RentalStatus.Completed ? "bg-secondary" : rental.Status == RentalStatus.Extended ? "bg-warning" : "bg-danger")">
                            @rental.Status
                        </span>
                    </td>
                    <td>
                        @if (rental.Status == RentalStatus.Active)
                        {
                            <a asp-page="Extend" asp-route-id="@rental.Id" class="btn btn-sm btn-warning">Extend</a>
                            <a asp-page="Return" asp-route-id="@rental.Id" class="btn btn-sm btn-info">Return</a>
                        }
                        <a asp-page="Edit" asp-route-id="@rental.Id" class="btn btn-sm btn-secondary">Edit</a>
                        <a asp-page="Delete" asp-route-id="@rental.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
