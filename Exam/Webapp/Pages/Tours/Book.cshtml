@page "{id}"
@model Webapp.Pages.Tours.BookModel
@{
    ViewData["Title"] = "Book Tour";
}

<h1>Book Tour</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">@Model.Tour.Type</h5>
                    <p class="card-text">Start Time: @Model.Tour.StartTime.ToString("g")</p>
                    <p class="card-text">Duration: @Model.Tour.Duration.TotalHours.ToString("0.##") hours</p>
                    <p class="card-text">Capacity: @Model.Tour.Capacity participants</p>
                    <p class="card-text">Price per participant: @Model.Tour.PricePerParticipant.ToString("C")</p>
                    <p class="card-text">Available: @Model.AvailableSlots participants</p>
                </div>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="TourBooking.CustomerId" class="form-label">Customer</label>
                <select asp-for="TourBooking.CustomerId" class="form-control" asp-items="Model.CustomerOptions">
                    <option value="">Select a customer</option>
                </select>
                <span asp-validation-for="TourBooking.CustomerId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="TourBooking.ParticipantCount" class="form-label">Participant Count</label>
                <input asp-for="TourBooking.ParticipantCount" type="number" class="form-control" 
                       min="1" max="@Model.AvailableSlots" />
                <span asp-validation-for="TourBooking.ParticipantCount" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label>Total Price</label>
                <input type="text" id="calculatedTotalPrice" class="form-control" value="@Model.CalculatedTotalPrice.ToString("C")" readonly />
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="TourBooking.SpecialRequests" class="form-label">Special Requests</label>
                <textarea asp-for="TourBooking.SpecialRequests" class="form-control" rows="3"></textarea>
                <span asp-validation-for="TourBooking.SpecialRequests" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Book Tour" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Recalculate total price when participant count changes
            $('#TourBooking_ParticipantCount').change(function() {
                var participantCount = $(this).val();
                var pricePerParticipant = @Model.Tour.PricePerParticipant;
                var totalPrice = participantCount * pricePerParticipant;
                $('#calculatedTotalPrice').text(totalPrice.toFixed(2));
            });
        });
    </script>
}
