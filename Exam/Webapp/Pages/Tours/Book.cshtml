@page "{id}"
@model Webapp.Pages.Tours.BookModel
@{
    ViewData["Title"] = "Book Tour";
}

<h1>Book Tour</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">@Model.Tour.Name</h5>
                    <p class="card-text"><strong>Type:</strong> @Model.Tour.Type</p>
                    <p class="card-text"><strong>Description:</strong> @Model.Tour.Description</p>
                    <p class="card-text"><strong>Duration:</strong> @Model.Tour.DurationHours.ToString("0.##") hours</p>
                    <p class="card-text"><strong>Capacity:</strong> @Model.Tour.MaxCapacity participants</p>
                    <p class="card-text"><strong>Included Bike:</strong> @Model.Tour.IncludedBikeType</p>
                    <p class="card-text"><strong>Price per participant:</strong> @Model.Tour.PricePerParticipant.ToString("C")</p>
                    <p class="card-text"><strong>Available Slots:</strong> @Model.AvailableSlots participants</p>
                </div>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="TourBooking.CustomerId" class="form-label">Customer</label>
                <select asp-for="TourBooking.CustomerId" class="form-control" asp-items="Model.CustomerOptions">
                    <option value="">Select a customer</option>
                </select>
                <span asp-validation-for="TourBooking.CustomerId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="TourBooking.BookingDate" class="form-label">Booking Date</label>
                <input asp-for="TourBooking.BookingDate" type="date" class="form-control" />
                <span asp-validation-for="TourBooking.BookingDate" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="TourBooking.TimeSlot" class="form-label">Time Slot</label>
                <input asp-for="TourBooking.TimeSlot" type="time" class="form-control" />
                <span asp-validation-for="TourBooking.TimeSlot" class="text-danger"></span>
                <small class="form-text text-muted">Available: @Model.Tour.TimeSlots</small>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="TourBooking.ParticipantCount" class="form-label">Participant Count</label>
                <input asp-for="TourBooking.ParticipantCount" type="number" class="form-control" 
                       min="1" max="@Model.AvailableSlots" />
                <span asp-validation-for="TourBooking.ParticipantCount" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label>Total Price</label>
                <input type="text" id="calculatedTotalPrice" class="form-control" value="@Model.CalculatedTotalPrice.ToString("C")" readonly />
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="TourBooking.SpecialRequests" class="form-label">Special Requests</label>
                <textarea asp-for="TourBooking.SpecialRequests" class="form-control" rows="3"></textarea>
                <span asp-validation-for="TourBooking.SpecialRequests" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Book Tour" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Recalculate total price when participant count changes
            $('#TourBooking_ParticipantCount').change(function() {
                var participantCount = $(this).val();
                var pricePerParticipant = @Model.Tour.PricePerParticipant;
                var totalPrice = participantCount * pricePerParticipant;
                $('#calculatedTotalPrice').val(totalPrice.toFixed(2));
            });
        });
    </script>
}
