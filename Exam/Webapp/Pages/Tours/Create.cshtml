@page
@model Webapp.Pages.Tours.CreateModel
@{
    ViewData["Title"] = "Create Tour";
}

<h1>Create Tour</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Tour.Type" class="form-label"></label>
                <select asp-for="Tour.Type" class="form-control" asp-items="Html.GetEnumSelectList<TourType>()">
                    <option value="">Select tour type</option>
                </select>
                <span asp-validation-for="Tour.Type" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Tour.StartTime" class="form-label"></label>
                <input asp-for="Tour.StartTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="Tour.StartTime" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Tour.Duration" class="form-label">Duration (hours)</label>
                <input type="number" class="form-control" min="1" step="0.5" 
                       value="@Model.Tour.Duration.TotalHours" 
                       onchange="document.getElementById('Tour_Duration').value = this.value * 60" />
                <input type="hidden" asp-for="Tour.Duration" />
                <span asp-validation-for="Tour.Duration" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Tour.Capacity" class="form-label"></label>
                <input asp-for="Tour.Capacity" type="number" class="form-control" min="1" />
                <span asp-validation-for="Tour.Capacity" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Tour.PricePerParticipant" class="form-label">Price Per Participant</label>
                <input asp-for="Tour.PricePerParticipant" class="form-control" step="0.01" />
                <span asp-validation-for="Tour.PricePerParticipant" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
