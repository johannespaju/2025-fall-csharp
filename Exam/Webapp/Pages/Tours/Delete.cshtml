@page "{id}"
@model Webapp.Pages.Tours.DeleteModel
@{
    ViewData["Title"] = "Delete Tour";
}

<h1>Delete Tour</h1>

<h3>Are you sure you want to delete this tour?</h3>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.Tour.Type</h5>
        <p class="card-text">Start Time: @Model.Tour.StartTime.ToString("g")</p>
        <p class="card-text">Duration: @Model.Tour.Duration.TotalHours.ToString("0.##") hours</p>
        <p class="card-text">Capacity: @Model.Tour.Capacity participants</p>
        <p class="card-text">Price per participant: @Model.Tour.PricePerParticipant.ToString("C")</p>
    </div>
</div>

@if (Model.HasBookings)
{
    <div class="alert alert-warning" role="alert">
        This tour has @Model.TotalParticipants participants booked. Deleting will also remove all bookings.
    </div>
}

<form method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
