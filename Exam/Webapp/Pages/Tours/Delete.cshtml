@page "{id}"
@model Webapp.Pages.Tours.DeleteModel
@{
    ViewData["Title"] = "Delete Tour";
}

<h1>Delete Tour</h1>

<h3>Are you sure you want to delete this tour?</h3>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.Tour.Name</h5>
        <p class="card-text"><strong>Type:</strong> @Model.Tour.Type</p>
        <p class="card-text"><strong>Description:</strong> @Model.Tour.Description</p>
        <p class="card-text"><strong>Duration:</strong> @Model.Tour.DurationHours.ToString("0.##") hours</p>
        <p class="card-text"><strong>Capacity:</strong> @Model.Tour.MaxCapacity participants</p>
        <p class="card-text"><strong>Included Bike Type:</strong> @Model.Tour.IncludedBikeType</p>
        <p class="card-text"><strong>Price per participant:</strong> @Model.Tour.PricePerParticipant.ToString("C")</p>
        <p class="card-text"><strong>Time Slots:</strong> @Model.Tour.TimeSlots</p>
    </div>
</div>

@if (Model.HasBookings)
{
    <div class="alert alert-warning" role="alert">
        This tour has @Model.TotalParticipants participants booked. Deleting will also remove all bookings.
    </div>
}

<form method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
