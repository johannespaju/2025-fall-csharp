@page
@model Webapp.Pages.Tours.IndexModel
@{
    ViewData["Title"] = "Tours";
}

<h1>Tours</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Tour</a>
</p>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Duration</th>
                <th>Capacity</th>
                <th>Included Bike</th>
                <th>Price</th>
                <th>Bookings</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var (tour, count) in Model.ToursWithCounts)
            {
                <tr>
                    <td>@tour.Name</td>
                    <td>@tour.Type</td>
                    <td>@tour.DurationHours.ToString("0.##") hours</td>
                    <td>@tour.MaxCapacity participants</td>
                    <td>@tour.IncludedBikeType</td>
                    <td>@tour.PricePerParticipant.ToString("C")</td>
                    <td>@count bookings</td>
                    <td>
                        <a asp-page="Book" asp-route-id="@tour.Id" class="btn btn-sm btn-success">Book</a>
                        <a asp-page="Edit" asp-route-id="@tour.Id" class="btn btn-sm btn-secondary">Edit</a>
                        <a asp-page="Delete" asp-route-id="@tour.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
