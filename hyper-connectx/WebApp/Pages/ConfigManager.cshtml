@page
@using BLL
@model WebApp.Pages.ConfigManagerModel
@{
    ViewData["Title"] = "Configuration Manager";
}

<div class="container">
    <h1>Configuration Manager</h1>
    <p class="text-muted">Create, edit, and delete game configurations</p>
    <hr />

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert-success">
            @Model.SuccessMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ValidationError))
    {
        <div class="alert-danger">
            @Model.ValidationError
        </div>
    }

    <!-- Create/Edit Configuration Form -->
    <div class="card">
        <div>Create New Configuration</div>
        <div>
            <form method="post" asp-page-handler="Create">
                <div class="form-section">
                    <div class="form-group">
                        <label asp-for="ConfigName">Configuration Name</label>
                        <input asp-for="ConfigName" />
                        <span asp-validation-for="ConfigName" class="validation-error"></span>
                    </div>
                </div>

                <div class="form-section">
                    <div class="form-group">
                        <label asp-for="BoardWidth">Board Width</label>
                        <input asp-for="BoardWidth" type="number" min="3" max="20" />
                        <span asp-validation-for="BoardWidth" class="validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BoardHeight">Board Height</label>
                        <input asp-for="BoardHeight" type="number" min="3" max="20" />
                        <span asp-validation-for="BoardHeight" class="validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConnectHowMany">Connect How Many</label>
                        <input asp-for="ConnectHowMany" type="number" min="2" max="20" />
                        <span asp-validation-for="ConnectHowMany" class="validation-error"></span>
                    </div>
                </div>

                <div class="checkbox-group">
                    <input asp-for="IsCylindrical" type="checkbox" />
                    <label asp-for="IsCylindrical">
                        Cylindrical Board (wraps horizontally)
                    </label>
                </div>

                <button type="submit" class="btn-primary">Create Configuration</button>
            </form>
        </div>
    </div>

    <!-- Saved Configurations List -->
    <div class="card">
        <div>Saved Configurations (@Model.SavedConfigurations.Count)</div>
        <div>
            @if (Model.SavedConfigurations.Any())
            {
                <div class="config-list">
                    @foreach (var config in Model.SavedConfigurations)
                    {
                        <div class="config-row">
                            <div class="config-name">@config.Name</div>
                            <div class="config-dims">@config.BoardWidth × @config.BoardHeight</div>
                            <div class="config-connect">@config.ConnectHow</div>
                            <div>
                                @if (config.IsCylindrical)
                                {
                                    <span class="badge badge-cyl">Cylindrical</span>
                                }
                                else
                                {
                                    <span class="badge badge-std">Standard</span>
                                }
                            </div>
                            <div class="config-actions">
                                @if (Model.ConfigHasGames.TryGetValue(config.Id, out var hasGames) && hasGames)
                                {
                                    <span class="btn-disabled">Has Games</span>
                                }
                                else
                                {
                                    <form method="post" asp-page-handler="LoadForEdit">
                                        <input type="hidden" name="id" value="@config.Id" />
                                        <button type="submit" class="btn-edit">Edit</button>
                                    </form>
                                }
                                <form method="post" asp-page-handler="Delete"
                                      onsubmit="return confirm('Are you sure you want to delete this configuration?');">
                                    <input type="hidden" name="id" value="@config.Id" />
                                    <button type="submit" class="btn-delete">Delete</button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert-info">
                    No saved configurations yet. Create one using the form above!
                </div>
            }
        </div>
    </div>

    <div class="mt-4">
        <a asp-page="/Index" class="back-link">← Back to Home</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
