@page "{id}"
@model WebApp.Pages.Configurations.DeleteModel
@{
    ViewData["Title"] = "Delete Configuration";
}

<h1>Delete Configuration</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}

@if (Model.Configuration != null)
{
    <div class="alert alert-warning">
        <strong>Are you sure you want to delete this configuration?</strong>
        <p class="mb-0">This action cannot be undone.</p>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            Configuration Details
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Configuration.Name</dd>

                <dt class="col-sm-3">Board Size</dt>
                <dd class="col-sm-9">@Model.Configuration.BoardWidth Ã— @Model.Configuration.BoardHeight</dd>

                <dt class="col-sm-3">Connect How Many</dt>
                <dd class="col-sm-9">@Model.Configuration.ConnectHow</dd>

                <dt class="col-sm-3">Player 1</dt>
                <dd class="col-sm-9">@Model.Configuration.P1Name</dd>

                <dt class="col-sm-3">Player 2</dt>
                <dd class="col-sm-9">@Model.Configuration.P2Name</dd>

                <dt class="col-sm-3">Game Mode</dt>
                <dd class="col-sm-9">@Model.Configuration.Mode</dd>

                <dt class="col-sm-3">Cylindrical Mode</dt>
                <dd class="col-sm-9">@(Model.Configuration.IsCylindrical ? "Yes" : "No")</dd>
            </dl>
        </div>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-page="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
}
else
{
    <div class="alert alert-info">
        Configuration not found.
    </div>
    <a asp-page="Index" class="btn btn-secondary">Back to Configurations</a>
}
