@page
@model WebApp.Pages.Configurations.IndexModel
@{
    ViewData["Title"] = "Configurations";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Game Configurations</h1>
    <a asp-page="Create" class="btn btn-primary">Create New Configuration</a>
</div>

@if (Model.Configurations.Count == 0)
{
    <div class="alert alert-info">
        No saved configurations yet. <a asp-page="Create">Create your first configuration</a> to get started.
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Board Size</th>
                <th>Connect</th>
                <th>Game Mode</th>
                <th>Cylindrical</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var (id, name, config) in Model.Configurations)
            {
                <tr>
                    <td>@name</td>
                    <td>@config.BoardWidth Ã— @config.BoardHeight</td>
                    <td>@config.ConnectHow</td>
                    <td>@config.Mode</td>
                    <td>@(config.IsCylindrical ? "Yes" : "No")</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@id" class="btn btn-sm btn-secondary">Edit</a>
                        <a asp-page="Delete" asp-route-id="@id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="mt-4">
    <a asp-page="/Index" class="btn btn-secondary">Back to Home</a>
</div>
