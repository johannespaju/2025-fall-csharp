<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] ?? "HyperConnectX")</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container nav-container">
                <a class="nav-brand" href="/">HyperConnectX</a>
                <ul class="nav-links">
                    <li><a href="/" class="nav-link">Home</a></li>
                    <li><a href="/NewGame" class="nav-link">New Game</a></li>
                    <li><a href="/Configurations" class="nav-link">Configurations</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <p class="text-center">&copy; @DateTime.Now.Year HyperConnectX - Connect X Game</p>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
